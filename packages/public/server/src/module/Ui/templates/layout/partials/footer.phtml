if (!function_exists("processNavigation")) {
    function processNavigation($children)
    {
        return array_map(function ($child) {
            return [
                'title' => $child['label'],
                'url' => $child['href'],
                'icon' => isset($child['icon']) ? 'fa' . str_replace(' ', '', ucwords(str_replace('-', ' ', $child['icon']))) : null,
            ];
        }, json_decode($children, true));
    }
}

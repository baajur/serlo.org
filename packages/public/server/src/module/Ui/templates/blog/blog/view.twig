{% set title = blog.getName() %}
{% do headTitle(title ~ ' - ' ~ ('Blog' | trans) ~ ' - ' ~ ('Page' | trans) ~ ' ' ~ paginator.getCurrentPageNumber()) %}
<div class="page-header">
    <div class="pull-right btn-group">
        {% if isGranted('blog.post.create', blog) %}
            <a class="btn btn-default btn-sm"
               href="{{ url('blog/post/create', {'id' : blog.getId()}) }}"><span
                    class="fa fa-file"></span></a>
        {% endif %}
        {% if isGranted('blog.posts.get.unpublished', blog) %}
            <a href="{{ url('blog/view-all', {'id' : blog.getId()}) }}"
               class="btn btn-default btn-sm"><span class="fa fa-calendar"></span></a>
        {% endif %}
    </div>
    <h1>{{ title }}
        <small>{{ 'Page' | trans }} {{ paginator.getCurrentPageNumber() }}</small>
    </h1>
</div>
{{ partial('blog/blog/view-partial', {'paginator' : paginator, 'blog' : blog}) }}
